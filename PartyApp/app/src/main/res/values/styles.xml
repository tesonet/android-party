<resources>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="header_style" parent="text_style">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="item_style" parent="text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/item_font_color</item>
    </style>

    <style name="login_edit_drawable">
        <item name="android:tint">@android:color/darker_gray</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="login_edit" parent="text_style">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:background">@drawable/round_white</item>
    </style>

    <style name="login_button" parent="text_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/round_green</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
