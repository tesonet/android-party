<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.Login_Container" >
		<!-- Custom Attr-->
		<item name="android:background">@drawable/bg_edittext</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_height">48dp</item>
	</style>
	<style name="AppTheme.Login_Button" parent="AppTheme.Login_Container" >
		<!-- Custom Attr-->
		<item name="android:background">@drawable/bg_button</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">12dp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="AppTheme.Login_EditText" parent="Base.Widget.AppCompat.EditText" >
		<!-- Custom Attr-->
		<item name="android:background">@null</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingEnd">16dp</item>
		<item name="android:paddingStart">42dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:textSize">12sp</item>

	</style>
	<style name="AppTheme.Login_EditText_Image" >
		<!-- Custom Attr-->
		<item name="android:layout_width">12dp</item>
		<item name="android:layout_height">12dp</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginStart">16dp</item>
		<item name="android:tint">@android:color/darker_gray</item>

	</style>
</resources>
