<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/server_list_row_height"
    android:paddingLeft="@dimen/server_list_row_padding"
    android:paddingRight="@dimen/server_list_row_padding"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/tv_server_name"
        android:text="@string/list_label_server"
        style="@style/ListHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_distance"
        android:text="@string/list_label_distance"
        style="@style/ListHeaderText"
        android:layout_width="@dimen/server_list_distance_col_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>