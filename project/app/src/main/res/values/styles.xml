<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.NoTitle</item>
    </style>

    <style name="ActionBar.Solid.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ab_logo_padding</item>
        <item name="android:background">@color/colorActionbarBackground</item>
        <item name="background">@color/colorActionbarBackground</item>

    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/login_input_width</item>
        <item name="android:layout_height">@dimen/login_input_height</item>
        <item name="android:background">@drawable/bg_login_input_shape</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/colorInputText</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">@dimen/login_input_width</item>
        <item name="android:layout_height">@dimen/login_input_height</item>
        <item name="android:background">@drawable/bg_login_button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LoginInfoText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="ListItemText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorListItemText</item>
    </style>

    <style name="ListHeaderText" parent="ListItemText">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/colorListHeaderText</item>
    </style>

    <!-- Custom Ripple Effect -->
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorListItemRipple</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/colorListBackground</item>
    </style>

</resources>