<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <style name="List">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ListRow">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ListHeader">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ListRowCell">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListHeaderCell">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateTint">@color/progress</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:minHeight">150dp</item>

    </style>

    <style name="ProgressText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/progress</item>
    </style>

</resources>
