<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lajevski.radoslav.tesonetparty.ui.activities.MainActivity"
    tools:layout_editor_absoluteY="25dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/f_servers_cl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/margin_large"
        android:paddingStart="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_server"
            android:textColor="@color/color_venipak_grey_medium"
            app:layout_constraintStart_toStartOf="@id/f_servers_cl_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="@dimen/item_width_large"
            android:layout_height="wrap_content"
            android:text="@string/ui_distance"
            android:gravity="start"
            android:foregroundGravity="left"
            android:layout_marginEnd="@dimen/margin_macro"
            android:layout_marginRight="@dimen/margin_macro"
            app:layout_constraintEnd_toEndOf="@id/f_servers_cl_header"
            android:textColor="@color/color_venipak_grey_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:elevation="@dimen/elevation_tiny"
        android:background="@drawable/shape_border_bottom"
        app:layout_constraintTop_toBottomOf="@id/f_servers_cl_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/f_servers_rv_servers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_servers_cl_header"
        tools:listitem="@layout/server_item" />



    <include
        android:id="@+id/f_servers_loading_container"
        layout="@layout/loading_layout"
        android:visibility="gone" />


</android.support.constraint.ConstraintLayout>
